{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="container-fluid bg-dark text-white">
        <div class="row justify-content-center pt-5 pb-3">
            <h1 class="text-light">Post</h1>
        </div>
        <div class="row justify-content-center py-4">
            <div class="col-md-8">

                <table class="table table-dark table-striped table-hover">
                    <tbody>
                    <tr>
                        <th class="text-warning">Id</th>
                        <td>{{ post.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-warning">Title</th>
                        <td>{{ post.title }}</td>
                    </tr>
                    <tr>
                        <th class="text-warning">Content</th>
                        <td>{{ post.content }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_post_index') }}" class="btn btn-secondary">back to list</a>

                    <div>
                        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning me-2">edit</a>
                        {{ include('post/_delete_form.html.twig') }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}