{% extends 'base.html.twig' %}

{% block title %}Statement{% endblock %}

{% block body %}
    <div class="container-fluid bg-dark text-white">
        <div class="row justify-content-center pt-5 pb-3">
            <h1 class="text-light">Statement</h1>
        </div>
        <div class="row justify-content-center py-4">
            <div class="col-md-8">

                <table class="table table-dark table-striped table-hover">
                    <tbody>
                    <tr>
                        <th class="text-warning">Id</th>
                        <td>{{ statement.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-warning">Full_name</th>
                        <td>{{ statement.fullName }}</td>
                    </tr>
                    <tr>
                        <th class="text-warning">Furniture</th>
                        <td>{{ statement.furniture }}</td>
                    </tr>
                    <tr>
                        <th class="text-warning">Phone</th>
                        <td>{{ statement.phone }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_statement_index') }}" class="btn btn-secondary">back to list</a>

                    <div>
                        <a href="{{ path('app_statement_edit', {'id': statement.id}) }}" class="btn btn-warning me-2">edit</a>
                        {{ include('statement/_delete_form.html.twig') }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}