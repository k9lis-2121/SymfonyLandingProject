{% extends 'base.html.twig' %}

{% block title %}Statement index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-white mb-4">Statement index</h1>

        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Full_name</th>
                <th>Furniture</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for statement in statements %}
                <tr>
                    <td>{{ statement.id }}</td>
                    <td>{{ statement.fullName }}</td>
                    <td>{{ statement.furniture }}</td>
                    <td>{{ statement.phone }}</td>
                    <td>
                        <a href="{{ path('app_statement_show', {'id': statement.id}) }}" class="btn btn-sm btn-primary">Show</a>
                        <a href="{{ path('app_statement_edit', {'id': statement.id}) }}" class="btn btn-sm btn-secondary">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No records found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_statement_new') }}" class="btn btn-success mt-3">Create new</a>
    </div>
{% endblock %}